/* pages/setting/setting.wxss */
.setting{
  margin: 30rpx;
}
.signTip{
  font-size: 14px;
  color: #939395;
}
.signChoice{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10rpx;
}
.star{
  margin-right: 10rpx;
  color: #FF4000;
}
.choiceItem{
  display: flex;
  width: 22%;
  margin-top: 20rpx;
  border: 0.5px solid #DFDFDF;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5%;
  color: #999B9A;
  justify-content: center;
}

.submit{
  margin-top: 100rpx;
  background-color: #FF9326;
  color: #fff;
  width: 100%;
}